{
  "name": "cfrp-platform",
  "version": "1.0.0",
  "description": "Canadian Financial Regulatory Platform - Unified SupTech Platform",
  "type": "module",
  "main": "src/index.tsx",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=cfrp-db --local --ip 0.0.0.0 --port 3000",
    "build": "vite build && cp custom-routes.json dist/_routes.json",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name cfrp",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:create": "wrangler d1 create cfrp-db",
    "db:migrate:local": "wrangler d1 migrations apply cfrp-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply cfrp-db",
    "db:seed": "wrangler d1 execute cfrp-db --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "db:console:local": "wrangler d1 execute cfrp-db --local",
    "db:console:prod": "wrangler d1 execute cfrp-db",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "git:init": "git init && git add . && git commit -m 'Initial commit'",
    "git:commit": "git add . && git commit -m",
    "git:status": "git status",
    "git:log": "git log --oneline"
  },
  "dependencies": {
    "hono": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250705.0",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wrangler": "^4.42.0"
  },
  "keywords": ["regulatory", "fintech", "cloudflare", "hono", "canadian", "compliance"],
  "author": "CFRP Development Team",
  "license": "MIT"
}